<h1>Listing stocks</h1>
<p class="text-right" > <%= link_to 'New Stock', new_stock_path,:class => 'btn btn-primary btn-lg' %> </p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Description</th>
      <th>Exchange</th>
      <th>Graph url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.symbol %></td>
        <td><%= stock.description %></td>
        <td><%= stock.exchange %></td>
        <td><%= stock.graph_url %></td>
        <td><%= link_to 'Show', stock,:class => 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

