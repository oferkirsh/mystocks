<h1>All transactions</h1>
<p class="text-right" > <%= link_to 'New Transaction', new_transaction_path,:class => 'btn btn-primary btn-lg' %> </p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Type</th>
      <th>Stock</th>
      <th>Quantity</th>
      <th>Rate</th>
      <th>Currency</th>
      <th>Gross proceeds</th>
      <th>Tax</th>
      <th>Commission</th>
      <th>Net proceeds</th>
      <th>Registration date</th>
      <th>Charge date</th>
      <th>Value date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.transaction_type %></td>
        <td><%= transaction.stock.symbol %></td>
        <td><%= transaction.quantity %></td>
        <td><%= transaction.rate %></td>
        <td><%= transaction.currency %></td>
        <td><%= transaction.gross_proceeds %></td>
        <td><%= transaction.tax %></td>
        <td><%= transaction.commission %></td>
        <td><%= transaction.net_proceeds %></td>
        <td><%= transaction.registration_date %></td>
        <td><%= transaction.charge_date %></td>
        <td><%= transaction.value_date %></td>
        <td><%= link_to 'Show', transaction,:class => 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction),:class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


